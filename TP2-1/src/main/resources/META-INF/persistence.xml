<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="TP2-1" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>ej1.model.Persona</class>
        <class>ej1.model.Direccion</class>
        <properties>
            <!-- Propiedades de configuracion de JPA para Derby -->
            <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:derby:exampleDB;create=true"/>

            <!-- Propiedad para la generacion automatica del esquema de base de datos -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <!-- Dejar que Hibernate detecte el dialecto; si fuese necesario se puede usar org.hibernate.community.dialect.DerbyDialect -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
