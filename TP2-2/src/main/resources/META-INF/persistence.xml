<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="TP2-1" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>ej1.model.Persona</class>
    <class>ej1.model.Direccion</class>
    <class>ej1.model.Socio</class>
    <class>ej1.model.Turno</class>
        <properties>
            <!-- Propiedades de configuracion de JPA para Derby -->
            <!-- 
            <property name="jakarta.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:derby:exampleDB;create=true"/>
            -->
            <!-- Config MySQL local; escapar '&' en XML como &amp; -->
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:mysql://localhost:3306/facturadoraDB?createDatabaseIfNotExist=true" />
            <property name="jakarta.persistence.jdbc.user" value="admin" />
            <property name="jakarta.persistence.jdbc.password" value="MiPassUsuario123!" />

            <!-- Propiedad para la generacion automatica del esquema de base de datos -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
